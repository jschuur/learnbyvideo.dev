{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"]
		},
		"generate": {
			"dependsOn": ["^generate"],
			"cache": false
		},
		"build:site": {
			"dependsOn": ["site#build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"build:backend": {
			"dependsOn": ["backend#build"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
